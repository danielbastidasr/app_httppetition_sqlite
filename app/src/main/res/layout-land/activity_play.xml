<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.dani.who_wants_to_be_millionaire_.Activities.Play"
    android:orientation="vertical"
    >


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:stretchColumns="*"
        android:id="@+id/header"
        >

        <TableRow>

            <LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/playFor"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:gravity="left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100$"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:gravity="left"
                    android:id="@+id/questionPrice"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_gravity="right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:gravity="right"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="20sp"
                    android:textColor="#ff0000"
                    android:id="@+id/questionNumber"
                    />


            </LinearLayout>

        </TableRow>


    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:id="@+id/body"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which is the Sunshine State of the US?"
            android:textSize="25sp"
            android:gravity="center"
            android:id="@+id/question"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:id="@+id/answers"
            android:orientation="horizontal"

            >
            <Button
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:text="North Carolina"
                android:textColor="#ffffff"
                android:layout_margin="3sp"
                android:id="@+id/opcion1"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:text="Florida"
                android:textColor="#ffffff"
                android:layout_marginLeft="100sp"
                android:id="@+id/opcion2"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:text="Texas"
                android:textColor="#ffffff"
                android:layout_margin="3sp"
                android:id="@+id/opcion3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff0000"
                android:text="Arizona"
                android:textColor="#ffffff"
                android:layout_marginLeft="100sp"
                android:id="@+id/opcion4"
                android:layout_gravity="right"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/phoneicon"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40sp"
            android:id="@+id/buttonCall"
            />

        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/fiftypercent"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="100sp"
            android:id="@+id/buttonFifty"
            />
        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/people"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="100sp"
            android:id="@+id/buttonPeople"
            />
        <Button
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/exit"
            android:layout_gravity="bottom"
            android:layout_marginLeft="100sp"
            android:id="@+id/buttonExit"
            />
    </LinearLayout>
</LinearLayout>
